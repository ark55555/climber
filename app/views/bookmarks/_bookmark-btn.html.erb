<% if user_signed_in? %>
  <% if post.bookmarked_by?(current_user) %>
    <%= link_to post.bookmarks.count, post_bookmarks_path(post), method: :delete, class: "fas fa-bookmark bm_color", remote: true %>
  <% else %>
    <%= link_to post.bookmarks.count, post_bookmarks_path(post), method: :post, class: "far fa-bookmark bm_black", remote: true %>
  <% end %>
<% else %>
  <%= link_to post.bookmarks.count, post_path(post), class: "far fa-bookmark bm_black" %>
<% end %>
