<div class="container">
  <div class="row">
  <h4 class=" py-3">プロフィール編集</h4>
    <div class="col-md-12 mx-2 text-center shadow p-2 my-5">
    <%= form_with model: @user, local:true do |f| %>
    <div class="form-group">
      <%= f.label :プロフィール画像 %>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "user.png", size: "100x100", class: "rounded-circle" %><br>
	    <%= f.attachment_field :profile_image, class: "center" %>
	  </div>

    <div class="form-group">
      <%= f.label :ユーザー名 %><span class="must"> (必須)</span>
      <%= f.text_field :name, class: "form-control", placeholder:"ユーザー名を入力してください。" %>
    </div>
    <div class="form-group">
      <%= f.label :自己紹介 %>
      <%= f.text_area :introduction, class: "form-control", placeholder:"自己紹介文を入力してください。" %>
    </div>
    <div class="btn-container">
      <%= f.submit "更新", class:"btn btn-secondary" %>
    </div>
    <% end %>
    <%= link_to "パスワードの変更はこちら", edit_user_registration_path, class: "btn btn-primary btn-sm mt-2" %><br>
    <%= link_to "アカウントを削除", user_path(@user.id), method: :delete, "data-confirm" => "ユーザー情報が見れなくなります。本当に削除しますか？", class: "btn btn-outline-secondary btn-sm mt-4" %><br>
    <small>
      <%= link_to user_path(@user) do %>
        <i class="fas fa-undo"></i> マイページに戻る
      <% end %>
    </small>
    </div>
  </div>
</div>