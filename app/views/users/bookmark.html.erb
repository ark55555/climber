<div class="container">
  <h4 class="text-dark bg-light text-center">お気に入り登録一覧</h4>
    <div class="row row-cols-1 row-cols-md-3">
      <% if @bookmark_list.present? %>
        <% @bookmark_list.each do |post| %>
        <div class="col mb-4">
          <div class="card h-100">
            <%= link_to post_path(post) do %>
              <%= attachment_image_tag post, :image, class: "card-img-top h-75"%>
            <% end %>
            <div class="card-body">
              <h6 class="card-title"><%= post.goods_name %></h6>
              <p class="card-text">
                <span><%= render "likes/like-btn", post: post %></span>
                <span><%= render "bookmarks/bookmark-btn", post: post %></span>
                <span class="fas fa-comment ml-2"><%= post.post_comments.count %></span>
                <%= link_to "詳細をみる", post_path(post) %>
              </p>
            </div>
          </div>
        </div>
        <% end %>
      <% else %>
        <h5>お気に入り登録しているリストはありません。</h5>
      <% end %>
    </div>
</div>
