<% if current_user.following?(user) %>
  <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-info btn-sm fas fa-check-circle", remote: true %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-outline-info btn-sm fas fa-check-circle", remote: true %>
<% end %>
