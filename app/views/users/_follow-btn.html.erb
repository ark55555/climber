<% if current_user.following?(user) %>
  <%= link_to user_relationships_path(user.id), method: :delete, class: "btn btn-info  btn-sm", remote: true do %>
    <i class="fas fa-check-circle text-light"></i>フォロー中
  <% end %>
<% else %>
  <%= link_to user_relationships_path(user.id), method: :post, class: "btn btn-outline-info  btn-sm", remote: true do %>
    <i class="fas fa-check-circle text-info"></i>フォローする
  <% end %>
<% end %>