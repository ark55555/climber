<div class="container">
  <h4 class="text-center">
    <% if @user == current_user %>
      マイページ
    <% else %>
      <%= @user.name %>さんのページ
    <% end %>
  </h4>
  <div class="row">
    <div class="col-md-3">
      <%= render "info", user: @user %>
    </div>
    <div class="col-md-9">
      <div class="row row-cols-1 row-cols-md-3">
        <% @posts.each do |post| %>
          <%= render "posts/index", post: post %>
        <% end %>
        <script>
          $('.post-evaluation').raty({
            readOnly: true,
            score: function() {
              return $(this).attr('data-score');
            },
            path: '/assets/'
          });
        </script>
      </div>
      <%= paginate @posts, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm"%>
    </div>
  </div>
</div>