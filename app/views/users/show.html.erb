<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render "info", user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h4 class="text-dark bg-light text-center">
        <% if @user == current_user %>
		      マイページ
	      <% else %>
		      <%= @user.name %>さんのページ
	      <% end %>
      </h4>
      <%= render "posts/index", posts: @posts %>
    </div>
  </div>
</div>