<div class="container">
  <h4><管理者専用>ユーザー情報</h4>
  <div class="row">
    <% @users.each do |user| %>
    <table class="table table-sm text-center align-items-center">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "user.png", size: "100x100", class: "rounded-circle" %><br>
              <%= user.name %>
            <% end %>
          </td>
          <td class="py-3">投稿：<%= user.posts.count %>件</td>
          <td class="py-3"><%= link_to "管理者権限で編集", edit_user_path(user), class: "btn btn-outline-secondary btn-sm fas fa-user-cog" %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>
  <%= paginate @users, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm"%>
  <div class="back my-2 text-center">
    <small>
      <%= link_to posts_path do %>
        <i class="fas fa-undo"></i> 投稿一覧に戻る
      <% end %>
    </small>
  </div>
</div>
