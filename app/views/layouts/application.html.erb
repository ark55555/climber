<!DOCTYPE html>
<html>
  <head>
    <title>Climber</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body>
    <header class="sticky-top shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
        <%= link_to root_path do %>
          <%= image_tag "logo.png", size: "200x120", class: "navbar-brand" %>
        <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <div class="btn btn-link header-search nav-link text-dark">
                <i class="fas fa-tag"></i>タグで探す</div>
            </li>
            <li class="nav-item">
             <span class="nav-link">
                <%= link_to user_path(current_user.id) do %>
                  <i class="fas fa-user-circle"></i><span class=" text-dark"> マイページ</span>
                <% end %>
              </span>
            </li>
            <li class="nav-item">
              <span class="nav-link">
                <%= link_to new_post_path do %>
                  <i class="fas fa-pen"></i><span class=" text-dark"> 投稿フォーム</span>
                <% end %>
              </span>
            </li>
            <li class="nav-item">
              <span class="nav-link">
                <%= link_to posts_path do %>
                  <i class="far fa-images"></i><span class=" text-dark"> 投稿一覧</span>
                <% end %>
              </span>
            </li>
            <li class="nav-item">
              <%= link_to " ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link  text-dark' %>
            </li>
            <% else %>
            <li class="nav-item">
              <span class="nav-link">
                <%= link_to posts_path do %>
                  <i class="far fa-images"></i><span class=" text-dark"> 投稿一覧</span>
                <% end %>
              </span>
            </li>
            <li class="nav-item">
              <%= link_to " 新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to " ログイン", new_user_session_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="mt-5 mb-5">
       <%= render "posts/tagbar" %>
      <%= render "layouts/flash" %>
      <%= yield %>
    </main>
    
    <footer class="fixed-bottom text-center">
      <p class="my-2">© 2021 Climber <i class="fas fa-mountain"></i></p>
    </footer>
  </body>
</html>
