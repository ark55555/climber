<div class="container">
  <div class="row">
    <div class="col-md-12 mx-2 text-center shadow px-0 my-5">
      <h4 class="text-dark bg-light py-3">投稿フォーム</h4>
      <%= form_with model: @post, local:true do |f| %>

        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>画像</td>
              <td><%= f.attachment_field :image %></td>
            </tr>

            <tr>
              <td>商品名</td>
              <td><%= f.text_field :goods_name, placeholder: "商品名" %></td>
            </tr>

<!--タグ作成予定-->
            <tr>
              <td>タグ</td>
              <td></td>
            </tr>
<!--おすすめ度-->
            <tr>
              <td>おすすめ度</td>
              <td></td>
            </tr>
            <tr>
              <td>説明文</td>
              <td><%= f.text_area :caption, placeholder: "使用した感想やおすすめポイント等、ご記入ください", size: "80x5" %></td>
            </tr>
          </tbody>
        </table>

        <div class="actions my-2">
          <%= f.submit "投稿", class: "btn btn-secondary btn-sm" %>
        </div>
      <% end %>

    </div>
  </div>
</div>