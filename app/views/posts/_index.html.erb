<div class="col mb-4">
  <div class="card shadow rounded">
  <%= link_to post_path(post) do %>
    <%= attachment_image_tag post, :image, class: "card-img-top", size: "200x200" %>
  <% end %>
  <div class="card-body">
    <h6 class="card-title"><%= post.goods_name %></h6>
    <p class="card-text">
      <span class="post-evaluation" data-score="<%= post.rate %>"></span><br>
      <span id="like-btn-<%= post.id %>"><%= render "likes/like-btn", post: post %></span>
      <span id="bookmark-btn-<%= post.id %>" class="ml-2"><%= render "bookmarks/bookmark-btn", post: post %></span>
      <span class="fas fa-comment ml-2"><%= post.post_comments.count %></span><br>
      <%= link_to "詳細をみる", post_path(post) %>
    </p>
  </div>
  </div>
</div>


