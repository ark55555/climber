<div class="container">
  <h4><i class="fas fa-paw pr-1"></i>投稿一覧ページ</h4>

  <div class="row">
    <% @posts.each do |post| %>
      <%= render "index", post: post %>
    <% end %>
    <script>
      $('.post-evaluation').raty({
        readOnly: true,
        score: function() {
          return $(this).attr('data-score');
        },
        path: '/assets/'
      });
    </script>
  </div>
  <%= paginate @posts, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm"%>
</div>
